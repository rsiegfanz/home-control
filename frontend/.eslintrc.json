{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.eslint.json"
    },
    "plugins": ["@typescript-eslint", "import", "prettier"],
    "extends": ["airbnb-typescript/base", "plugin:@typescript-eslint/recommended-type-checked", "plugin:import/typescript", "prettier"],
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "rules": {
        "max-len": ["warn", { "code": 200 }],
        "indent": ["error", 4]
    }
}
